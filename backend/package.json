{
  "name": "@digicatapult/nice-agent-portal-backend",
  "version": "0.0.12",
  "description": "OpenAPI service to manage profiles for the NICE agent and communication with veritable-cloudagent",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "depcheck": "depcheck",
    "build:tsoa": "tsoa spec-and-routes",
    "build": "npm run build:tsoa && tsc",
    "start": "node build/index.js",
    "dev": "concurrently \"NODE_ENV=dev nodemon | pino-colada\" \"nodemon -x tsoa spec-and-routes --ignore src/routes.ts --ignore src/swagger.json\"",
    "test": "npm run build && npm run test:integration && npm run test:unit",
    "test:integration": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./test/integration/**/*.test.ts",
    "test:unit": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "coverage": "c8 npm run test",
    "db:deploy": "dotenv -e .env.db -- npx prisma migrate deploy",
    "db:dev": "dotenv -e .env.db -- npx prisma migrate dev",
    "db:reset": "dotenv -e .env.db -- npx prisma migrate reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/nice-agent-portal.git"
  },
  "engines": {
    "node": "20.x.x",
    "npm": "10.x.x"
  },
  "keywords": [
    "OpenAPI"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digicatapult/nice-agent-portal/issues"
  },
  "homepage": "https://github.com/digicatapult/nice-agent-portal#readme",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "c8": "^9.1.0",
    "chai": "^5.1.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.3.0",
    "nodemon": "^3.0.3",
    "pino-colada": "^2.2.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "tsimp": "^2.0.11",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@tsoa/runtime": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.3",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1",
    "tsyringe": "^4.8.0"
  }
}
