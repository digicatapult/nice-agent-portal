{
  "name": "@digicatapult/nice-agent-portal",
  "version": "0.1.4",
  "description": "NICE agent portal",
  "homepage": "https://github.com/digicatapult/nice-agent-portal",
  "workspaces": [
    "frontend",
    "backend-peer",
    "backend-issuer"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "depcheck": "npm run depcheck --workspaces",
    "build": "npm run build --workspaces",
    "dev:peer": "npm run build --workspace=frontend && npm run dev --workspace=backend-peer",
    "dev:issuer": "npm run build --workspace=frontend && npm run dev --workspace=backend-issuer",
    "dev": "npm run dev:peer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/nice-agent-portal.git"
  },
  "engines": {
    "node": "20.x.x",
    "npm": "10.x.x"
  },
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digicatapult/nice-agent-portal/issues"
  }
}
